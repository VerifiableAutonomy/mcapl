				||(||(~B(org, hold(3, l)), B(org, hold(3, r))),||(A(~B(org, food(3))), E(B(org, rewarded(3)))))),
				||(||(~B(org, hold(2, l)), B(org, hold(2, r))),||(A(~B(org, food(2))), E(B(org, rewarded(2))))))))


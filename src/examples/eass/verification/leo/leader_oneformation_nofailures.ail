// This file sets up the configuration for a leader agent where there are no
// thruster failures among the follower agents and were only one formation (line) is being used.

env=eass.verification.leo.LEOVerificationEnvironment

mas.file = /Eclipse/mcapl/src/examples/eass/verification/leo/satellite_leader_agent_line.eass
mas.builder = eass.EASSMASBuilder

log.warning = ajpf.MCAPLAgent
log.info = eass.mas.DefaultEnvironment
log.format = brief

# Satellite specific configuration
testing_movement=true
testing_thrusters=false
allthrusters=false
requesting_positions=false
requesting_formation=false
allpositions=false
all_can_break=false
changing_formation=false
initial_formation=line

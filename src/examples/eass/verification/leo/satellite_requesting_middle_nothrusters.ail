// This file sets up the configuration for a follower satellite agent 
// in which there are no thruster failures and where it is never requested to change formation
// but where it does receive information on its position from a leader agent.

env=eass.verification.leo.LEOVerificationEnvironment

mas.file = /src/examples/eass/verification/leo/satellite.eass
mas.builder = eass.EASSMASBuilder

log.warning = ajpf.MCAPLAgent
log.info = eass.mas.DefaultEnvironment
log.fine = ail.semantics.AILAgent
log.format = brief

# Satellite specific configuration
testing_movement=true
testing_thrusters=false
allthrusters=false
requesting_positions=true
requesting_formation=true
allpositions=false
all_can_break=false
changing_formation=false
initial_formation=line

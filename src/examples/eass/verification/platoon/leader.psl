full_model: [] ~B(leader, bad)

joining_success: []( G(leader, platoon_m(follower3, follower1))
		&
		[] (ItD(leader, send(follower1, 3, set_spacing(17))) -> <>B(leader, set_spacing_from(follower1)))
		&
		[] (ItD(leader, send(follower3, 1, join_agreement(follower3, follower1))) -> <>B(leader, message(follower3, 2)))
		->
		<>B(leader, platoon_m(follower3, follower1))  
		)

joining_agr_safety: [](~B(leader, spacing_17(follower1)))
				->
				[] (~ItD(leader, send(follower3, 1, join_agreement(follower3, follower1))))

joining_agr_liveness: []( G(leader, platoon_m(follower3, follower1))
		&
		[] (ItD(leader, send(follower1, 3, set_spacing(17))) -> <>B(leader, spacing_17(follower1)))
		->
		<>ItD(leader, send(follower3, 1, join_agreement(follower3, follower1)))
		)


leaving_success: [] (
		(G(leader, platoon_m(leader, follower1)) 
			&
		 [] (ItD(leader, send(follower3, 3, set_spacing(17))) -> <>B(leader, set_spacing_from(follower3)))
		 	&
		 [] (ItD(leader, send(follower3, 1, leave_agreement(follower3))) -> <>B(leader, message(follower3, 2)))	
		)
		->
		<>B(leader, platoon_m(leader, follower1))		
	  )